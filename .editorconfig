# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.diff]
trim_trailing_whitespace = false

[*.gradle]
indent_size = 4

[*.{md,markdown}]
max_line_length = 0
trim_trailing_whitespace = false

[BUCK]
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_style = tab
